# =============================================================================
# UniNest Application Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env file to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# PostgreSQL Database Configuration
# -----------------------------------------------------------------------------
POSTGRES_DB=uninest_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_EXTERNAL_PORT=5432

# -----------------------------------------------------------------------------
# Backend API Configuration
# -----------------------------------------------------------------------------
NODE_ENV=development
BACKEND_INTERNAL_PORT=3000
BACKEND_EXTERNAL_PORT=8080
SYNC_DATABASE=true

# JWT Authentication
JWT_SECRET=your_super_secure_jwt_secret_key_here_min_32_chars

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:80

# -----------------------------------------------------------------------------
# Frontend Configuration
# -----------------------------------------------------------------------------
FRONTEND_PORT=80
VITE_API_URL=http://localhost:8080

# -----------------------------------------------------------------------------
# Mobile App Configuration
# -----------------------------------------------------------------------------
MOBILE_HOSTNAME=localhost
EXPO_DEVTOOLS_PORT=19000
EXPO_DEVTOOLS_WEBSOCKET_PORT=19001
EXPO_WEB_PORT=19006
METRO_BUNDLER_PORT=8081

# -----------------------------------------------------------------------------
# Cloudinary Configuration (for image uploads)
# -----------------------------------------------------------------------------
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# -----------------------------------------------------------------------------
# Email Configuration (optional - for notifications)
# -----------------------------------------------------------------------------
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# EMAIL_FROM=noreply@uninest.com

# -----------------------------------------------------------------------------
# Redis Configuration (optional - for caching and sessions)
# -----------------------------------------------------------------------------
# REDIS_HOST=redis
# REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password

# -----------------------------------------------------------------------------
# Application URLs
# -----------------------------------------------------------------------------
APP_NAME=UniNest
APP_URL=http://localhost:80
API_URL=http://localhost:8080

# -----------------------------------------------------------------------------
# Security & Rate Limiting
# -----------------------------------------------------------------------------
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# -----------------------------------------------------------------------------
# File Upload Limits
# -----------------------------------------------------------------------------
# MAX_FILE_SIZE=10485760
# MAX_FILES_PER_UPLOAD=10

# -----------------------------------------------------------------------------
# Session Configuration
# -----------------------------------------------------------------------------
# SESSION_SECRET=your_session_secret_key_here
# SESSION_COOKIE_MAX_AGE=86400000

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
# LOG_LEVEL=info
# LOG_FILE_PATH=./logs/app.log

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
# ENABLE_ANALYTICS=true
# ENABLE_NOTIFICATIONS=true
# ENABLE_EMAIL_VERIFICATION=true

# -----------------------------------------------------------------------------
# Development Tools
# -----------------------------------------------------------------------------
# DEBUG=true
# ENABLE_SWAGGER=true
# ENABLE_GRAPHQL_PLAYGROUND=true
